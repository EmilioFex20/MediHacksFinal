#:kivy 1.0

<login>:
    MDFloatLayout:
        id:login_layout
        md_bg_color: 1,1,1,1

        MDIconButton:
            icon: "assets/atras.png"
            user_font_size: "35sp"
            pos_hint: {"center_y":.95}

        Image:
            source: "assets/logo.png"
            size_hint: .36,.36
            pos_hint: {"center_x":.22, "center_y":.8}

        MDLabel:
            text: "Allergy"
            pos_hint: {"center_x":.917, "center_y":.810}
            font_size: "32sp"
            font_name: "letras/Poppins-Regular.ttf"    

        MDLabel:
            text: "Detector"
            pos_hint: {"center_x":.915, "center_y":.760}
            font_size: "22sp"
            font_name: "letras/Poppins-Medium.ttf"     
            color: 120/225,120/225,120/225,1

        
        MDTextField: 
            id:input_email 
            hint_text: "Email" 
            helper_text: ""
            font_name: "letras/Poppins-Regular.ttf" 
            helper_text_mode: "persistent" 
            pos_hint: {"center_x": .5 ,"center_y":.52}
            size_hint_x:.85
            line_color_focus:0,0,0,1

        MDTextField: 
            id:input_password
            hint_text: "Password" 
            helper_text: ""
            font_name: "letras/Poppins-Regular.ttf" 
            helper_text_mode: "persistent" 
            pos_hint: {"center_x": .5 ,"center_y":.42}
            size_hint_x:.85
            line_color_focus:0,0,0,1
            password: True


        Image: 
            source: "assets/user.png" 
            size_hint: .10, .10 
            pos_hint:{"center_x": .90, "center_y":.54}
            
        Image: 
            source: "assets/key.png" 
            size_hint: .10, .10 
            pos_hint:{"center_x": .90, "center_y":.44}

        MDTextButton:
            text: "Have you forgotten your password?"
            font_size: "9sp"
            font_name: "letras/Poppins-Regular.ttf"
            haling: "center"
            color:120/255,120/255,120/255,1
            pos_hint: {"center_x":.715,"center_y":.370}

        MDFlatButton:
            text: "Log in"
            size_hint:.79,.08
            font_name: "letras/Poppins-Medium.ttf"
            pos_hint: {"center_x":.50,"center_y":.25}

            canvas.before:
                Color: 
                    rgb: 41/255,135/255,168/255
                RoundedRectangle:
                    size:self.size
                    pos: self.pos
                    radius: [6]
            on_release: root.connect()
                

            